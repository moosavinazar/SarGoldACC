<Window x:Class="SarGoldACC.WpfApp.Views.RcvMade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:SarGoldACC.WpfApp.Control"
        xmlns:views="clr-namespace:SarGoldACC.WpfApp.Views"
        xmlns:converters="clr-namespace:SarGoldACC.WpfApp.Converter"
        mc:Ignorable="d"
        Title="دریافت ساخته" 
        Height="330" 
        Width="600"
        KeyDown="Window_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded"
        Activated="Window_Activated"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Background="Aqua">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <controls:ComboBoxSelector 
                        x:Name="MadeSubCategoryComboBox" 
                        Grid.Column="0"
                        LostFocus="MadeSubCategorySelectorControl_LostFocus"
                        Label="دسته بندی"
                        ItemsSource="{Binding MadeSubCategories, Mode=TwoWay}"
                        SelectedValue="{Binding MadeSubCategoryId, Mode=TwoWay}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Id"
                        CanAccessAddButton="{Binding CanAccessMadeSubCategoryButton}"
                        AddWindowType="{x:Type views:MadeSubCategory}"/>
                    <controls:ComboBoxSelector 
                        x:Name="BoxComboBox" 
                        Grid.Column="1"
                        LostFocus="BoxSelectorControl_LostFocus"
                        Label="جعبه"
                        ItemsSource="{Binding Boxes, Mode=TwoWay}"
                        SelectedValue="{Binding BoxId, Mode=TwoWay}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Id"
                        CanAccessAddButton="{Binding CanAccessBoxButton}"
                        AddWindowType="{x:Type views:Box}"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <controls:TextBoxValidate 
                        x:Name="Name" 
                        Grid.Column="0"
                        Label="عنوان"
                        ValidText="{Binding Name, Mode=TwoWay}"
                        ValidTextPattern="^.+$"
                        ValidTextFinalPattern="^.+$"
                        NotValidTextMessage="عنوان الزامی است"
                        AllowNullText="False"
                        InputLanguage="Persian"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <controls:TextBoxValidate 
                        x:Name="Ayar" 
                        Grid.Column="0"
                        Label="عیار"
                        ValidText="{Binding Ayar, Mode=TwoWay}"
                        ValidTextPattern="^[0-9]+$"
                        ValidTextFinalPattern="^|(\d{3})$"
                        TextLength="3"
                        NotValidTextMessage="عیار الزامی است"
                        AllowNullText="True"
                        InputLanguage="English"/>
                    <controls:TextBoxWeight
                        x:Name="Weight" 
                        Grid.Column="1"
                        Ayar="{Binding Ayar, Mode=TwoWay}"
                        Weight750="{Binding Weight750, Mode=TwoWay}"
                        Label="وزن"
                        ValidText="{Binding Weight, Mode=TwoWay}"/>
                    <controls:TextBoxWeight
                        IsEnabled="False"
                        x:Name="Weight750" 
                        Grid.Column="2"
                        Label="750"
                        ValidText="{Binding Weight750, Mode=TwoWay}"/>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <controls:TextBoxRiyal
                        x:Name="OjratR" 
                        Grid.Column="0"
                        Label="اجرت ریال"
                        ValidText="{Binding OjratR, Mode=TwoWay}"/>
                    <controls:TextBoxValidate 
                        x:Name="OjratP" 
                        Grid.Column="1"
                        Label="درصد اجرت"
                        ValidText="{Binding OjratP, Mode=TwoWay}"
                        ValidTextPattern="^[0-9]+$"
                        ValidTextFinalPattern="^|(\d{3})$"
                        TextLength="3"
                        NotValidTextMessage="درصد اجرت اختیاری است"
                        AllowNullText="True"
                        InputLanguage="English"/>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <controls:TextBoxValidate 
                        x:Name="Barcode" 
                        Grid.Column="0"
                        Label="بارکد"
                        ValidText="{Binding Barcode, Mode=TwoWay}"
                        ValidTextPattern="^*$"
                        ValidTextFinalPattern="^*$"
                        NotValidTextMessage="بارکد اختیاری است"
                        AllowNullText="True"
                        InputLanguage="English"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Image x:Name="CustomerImagePreview"
                           Width="100" Height="100"
                           Stretch="Uniform"
                           Margin="0,0,0,10"
                           Source="{Binding PhotoPreview, Mode=OneWay}" />
                    <Button Content="انتخاب عکس"
                            Click="ChoosePhotoButton_Click"
                            Style="{StaticResource PrimaryBtn}" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <controls:TextBoxValidate 
                x:Name="Description" 
                Grid.Column="0"
                Label="توضیحات"
                ValidText="{Binding Description, Mode=TwoWay}"
                ValidTextPattern="^*$"
                ValidTextFinalPattern="^*$"
                NotValidTextMessage="توضیحات اختیاری است"
                AllowNullText="True"
                InputLanguage="Persian"/>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="SaveButton"
                    IsEnabled="{Binding CanSave}"
                    Content="ذخیره"
                    Style="{StaticResource SuccessBtn}"
                    HorizontalAlignment="Center"
                    Click="ClickSave"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
