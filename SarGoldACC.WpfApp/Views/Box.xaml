<Window x:Class="SarGoldACC.WpfApp.Views.Box"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SarGoldACC.WpfApp.Views"
        xmlns:converters="clr-namespace:SarGoldACC.WpfApp.Converter"
        xmlns:controls="clr-namespace:SarGoldACC.WpfApp.Control"
        xmlns:helpers="clr-namespace:SarGoldACC.WpfApp.Helpers"
        xmlns:views="clr-namespace:SarGoldACC.WpfApp.Views"
        mc:Ignorable="d"
        Title="جعبه" 
        Height="600" 
        Width="800"
        KeyDown="Window_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="نام"
                           Visibility="{Binding CanAccessBoxCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" 
                         x:Name="NameBox" 
                         Visibility="{Binding CanAccessBoxCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                         GotFocus="NameBox_GotFocus"
                         Loaded="BranchNameBox_Loaded"
                         PreviewTextInput="NameBox_PreviewTextInput"
                         Margin="10,10"
                         Style="{StaticResource ValidatedTextBoxStyle}"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                <TextBlock Text="شعبه"
                           Visibility="{Binding CanAccessBoxCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                           Grid.Column="2"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5,10,5,0"/>
                <controls:ComboBoxSelector 
                    x:Name="BranchSelectorControl" 
                    Grid.Column="3"
                    ItemsSource="{Binding FilteredBranches}"
                    SelectedValue="{Binding BranchId, Mode=TwoWay}"
                    DisplayMemberPath="Name"
                    SelectedValuePath="Id"
                    SearchText="{Binding SearchText, Mode=TwoWay}"
                    CanAccessAddButton="{Binding CanAccessBranchButton}"
                    AddWindowType="{x:Type views:Branch}"
                    Margin="5,10,5,5"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="وزن"
                           Visibility="{Binding CanAccessBoxCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,5,5,0"/>
                <TextBox x:Name="WeightBox" 
                         Visibility="{Binding CanAccessBoxCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                         Grid.Column="1"
                         Margin="0 5 0 0"
                         Style="{StaticResource InputTextBox}"
                         Text="{Binding Weight}"/>
                <TextBlock Text="نوع"
                           Visibility="{Binding CanAccessGroupCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                           Grid.Column="2"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5,10,5,0"/>
                <ComboBox x:Name="TypeComboBox" Grid.Column="3"
                          ItemsSource="{Binding BoxTypes}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Type, Mode=TwoWay}"
                          Margin="0,5,0,0"/>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" 
                    Visibility="{Binding CanAccessGroupCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}">
            <Button x:Name="SaveButton"
                    Content="ذخیره"
                    Style="{StaticResource SuccessBtn}"
                    HorizontalAlignment="Center"
                    Click="ClickSave"
                    Padding="10,5"/>
        </StackPanel>
        <controls:CustomizableDataGrid Grid.Row="3" x:Name="DataGrid"
                                       ItemsSource="{Binding AllBoxes}"
                                       Loaded="DataGrid_Loaded"
                                       Visibility="{Binding CanAccessBoxView, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Window>
