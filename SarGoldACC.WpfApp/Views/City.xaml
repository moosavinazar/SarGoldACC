<Window x:Class="SarGoldACC.WpfApp.Views.City"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SarGoldACC.WpfApp.Views"
        xmlns:converters="clr-namespace:SarGoldACC.WpfApp.Converter"
        xmlns:controls="clr-namespace:SarGoldACC.WpfApp.Control"
        mc:Ignorable="d"
        Title="شهر" 
        Height="600" 
        Width="800"
        KeyDown="CityWindow_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="نام شهر"
                       Visibility="{Binding CanAccessCityCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,5,10"/>
            <TextBox Grid.Column="1" 
                     x:Name="NameBox" 
                     Visibility="{Binding CanAccessCityCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                     KeyDown="CityNameBox_KeyDown"
                     GotFocus="CityNameBox_GotFocus"
                     Loaded="CityNameBox_Loaded"
                     PreviewTextInput="CityNameBox_PreviewTextInput"
                     Margin="0 0 10 10"
                     Style="{StaticResource ValidatedTextBoxStyle}"
                     Text="{Binding CityName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
            <Button Grid.Column="2" 
                    x:Name="SaveButton"
                    IsEnabled="{Binding CanSave}"
                    Visibility="{Binding CanAccessCityCreateOrEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                    Content="ذخیره"
                    Style="{StaticResource SuccessBtn}"
                    HorizontalAlignment="Center"
                    Margin="0,0 0 10"
                    Click="ClickSaveCity"
                    Padding="10,5"/>
            <Button Grid.Column="3" x:Name="ClearButton"
                    Content="جدید"
                    ToolTip="F5"
                    Style="{StaticResource PrimaryBtn}"
                    HorizontalAlignment="Center"
                    Click="ClickClearForm"
                    Margin="5,0 0 10"
                    Padding="10,5"/>
        </Grid>
        <controls:CustomizableDataGrid Grid.Row="1" x:Name="CityDataGrid"
                                       ItemsSource="{Binding AllCities}"
                                       Loaded="CityDataGrid_Loaded"
                                       Visibility="{Binding CanAccessCityView, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Window>
