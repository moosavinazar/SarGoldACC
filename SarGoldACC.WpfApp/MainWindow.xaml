<Fluent:RibbonWindow x:Class="SarGoldACC.WpfApp.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:Fluent="urn:fluent-ribbon"
                     xmlns:views="clr-namespace:SarGoldACC.WpfApp.Views"
                     xmlns:vm="clr-namespace:SarGoldACC.WpfApp.ViewModels"
                     Title="SarGoldAcc" Height="450" Width="800"
                     FlowDirection="RightToLeft">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Fluent:Ribbon Grid.Row="0">
            <!--Backstage-->
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
            
            <!--Tabs-->
            <Fluent:RibbonTabItem Header="عملیات اصلی">
                <Fluent:RibbonGroupBox Header="سند">
                    <Fluent:Button Header="صدور سند"
                                   Icon="pack://application:,,,/Resources/Icons/NewDocument.png"
                                   LargeIcon="pack://application:,,,/Resources/Icons/NewDocumentLarge.png" />
                    <Fluent:Button Header="ویرایش سند"
                                   Icon="pack://application:,,,/Resources/Icons/EditDocument.png"
                                   LargeIcon="pack://application:,,,/Resources/Icons/EditDocumentLarge.png" />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>
        
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
    </Grid>
</Fluent:RibbonWindow>