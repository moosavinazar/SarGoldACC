<Window x:Class="SarGoldACC.WpfApp.Views.RcvOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SarGoldACC.WpfApp.Views"
        xmlns:converters="clr-namespace:SarGoldACC.WpfApp.Converter"
        xmlns:controls="clr-namespace:SarGoldACC.WpfApp.Control"
        xmlns:views="clr-namespace:SarGoldACC.WpfApp.Views"
        mc:Ignorable="d"
        Title="حواله پرداخت" 
        Height="230" 
        Width="400"
        KeyDown="RcvOrderWindow_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded"
        Activated="Window_Activated"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Background="Aqua">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <controls:ComboBoxSelector 
                x:Name="CounterpartyComboBox" 
                Grid.Column="0"
                Label="مشتری"
                ItemsSource="{Binding Counterparties, Mode=TwoWay}"
                SelectedValue="{Binding CounterpartyId, Mode=TwoWay}"
                DisplayMemberPath="Name"
                SelectedValuePath="Id"
                CanAccessAddButton="{Binding CanAccessCustomerButton}"
                AddWindowType="{x:Type views:Customer}"
                Padding="0 10 10 10"/>
            <Grid Grid.Column="1">
                <Ellipse Width="60" Height="60" Stroke="#000000" StrokeThickness="2" />
                <Ellipse Width="60" Height="60">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding UserImagePath}" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <controls:TextBoxWeight
                x:Name="WeightBed" 
                Grid.Column="0"
                Label="بستانکاری طلا"
                ValidText="{Binding WeightBes, Mode=TwoWay}"/>
            <controls:TextBoxRiyal
                x:Name="RiyalBed" 
                Grid.Column="1"
                Label="بستانکاری ریال"
                ValidText="{Binding RiyalBes, Mode=TwoWay}"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <controls:TextBoxValidate 
                x:Name="Description" 
                Grid.Column="0"
                Label="توضیحات"
                ValidText="{Binding Description, Mode=TwoWay}"
                ValidTextPattern="^*$"
                ValidTextFinalPattern="^*$"
                NotValidTextMessage="توضیحات اختیاری است"
                AllowNullText="True"
                InputLanguage="Persian"/>
        </Grid>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SaveButton"
                    IsEnabled="{Binding CanSave}"
                    Content="ذخیره"
                    ToolTip="Shift+Enter"
                    Style="{StaticResource SuccessBtn}"
                    HorizontalAlignment="Center"
                    Click="ClickSaveRcvOrder"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
