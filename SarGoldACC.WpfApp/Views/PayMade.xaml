<Window x:Class="SarGoldACC.WpfApp.Views.PayMade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:SarGoldACC.WpfApp.Control"
        mc:Ignorable="d"
        Title="پرداخت ساخته" 
        Height="500" 
        Width="700"
        KeyDown="Window_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded"
        Activated="Window_Activated"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Background="Plum">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Margin="10,0,0,0">
            <DataGrid 
                x:Name="MadeDataGrid"
                ItemsSource="{Binding MadeItems}"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="True"
                SelectionMode="Extended" 
                SelectionUnit="FullRow"
                Height="350"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                Margin="0,10,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="شناسه" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="عنوان" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="بارکد" Binding="{Binding Barcode}"/>
                    <DataGridTextColumn Header="عیار" Binding="{Binding Ayar}"/>
                    <DataGridTextColumn Header="وزن" Binding="{Binding Weight}"/>
                    <DataGridTextColumn Header="750" Binding="{Binding Weight750}"/>
                    <DataGridTextColumn Header="اجرت ریالی" Binding="{Binding OjratR}"/>
                    <DataGridTextColumn Header="درصد اجرت" Binding="{Binding OjratP}"/>
                    <DataGridTextColumn Header="زیر دسته بندی" Binding="{Binding MadeSubCategoryName}"/>
                    <DataGridTextColumn Header="دسته بندی" Binding="{Binding MadeCategoryName}"/>
                    <DataGridTextColumn Header="جعبه" Binding="{Binding BoxName}"/>
                    <DataGridTextColumn Header="توضیحات" Binding="{Binding Description}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <controls:TextBoxValidate 
                x:Name="Description" 
                Grid.Column="0"
                Label="توضیحات"
                ValidText="{Binding Description, Mode=TwoWay}"
                ValidTextPattern="^*$"
                ValidTextFinalPattern="^*$"
                NotValidTextMessage="توضیحات اختیاری است"
                AllowNullText="True"
                InputLanguage="Persian"/>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SaveButton"
                    Content="ذخیره"
                    Style="{StaticResource SuccessBtn}"
                    HorizontalAlignment="Center"
                    Click="ClickSave"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
